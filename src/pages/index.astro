---
import Layout from "../layouts/Layout.astro";
import Icon from "../layouts/icon.astro";
import Footer from "../component/Footer.astro";
import "../styles/global.css";
---

<Layout>
	<!-- Navbar -->
	<nav
		class="flex justify-between items-center p-4 bg-black bg-opacity-70 sticky top-0 z-50"
	>
		<img src="/logo.svg" alt="Logo" class="w-32" />
		<ul class="flex space-x-6">
			<li><a href="#" class="hover:text-green-400">Inicio</a></li>
			<!-- <li><a href="#" class="hover:text-green-400">Tienda</a></li> -->
			<!-- <li><a href="#" class="hover:text-green-400">Creación de páginas web</a></li> -->
			<!-- <li><a href="#" class="hover:text-green-400">Códigos y diagramas Arduino</a></li> -->
			<!-- <li><a href="#" class="hover:text-green-400">Diseño web</a></li> -->
			<li>
				<a href="#" class="hover:text-green-400"
					><Icon name="lupa" /></a>
			</li>
		</ul>
	</nav>

	<!-- Hero -->
	<div
		class="h-screen bg-[url('/1.jpg')] bg-cover bg-center bg-fixed flex flex-col justify-center items-center text-center px-4 relative"
	>
		<div class="absolute inset-0 bg-black bg-opacity-50 z=0"></div>
		<img src="/logo.svg" alt="Logo" class="w-132 z-10" />
		<p class="relative z-10 mt-4 text-lg md:text-2xl text-green-300">
			Technological Solutions
		</p>
	</div>

	<!-- Quiénes somos -->
	<section class="py-20 px-6 max-w-5xl mx-auto text-center">
		<h2 class="text-3xl font-bold mb-4">¿Quiénes somos?</h2>
		<p class="text-gray-300 text-lg">
			Somos Ingeniería X, tu aliado tecnológico en desarrollo web,
			soluciones electrónicas y diseño digital. ¡Impulsamos tu proyecto al
			siguiente nivel!
		</p>
	</section>

	<!-- Servicios -->
	<section class="py-20 bg-gray-800 px-6">
		<h2 class="text-3xl font-bold text-center mb-10">Nuestros Servicios</h2>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
			<!-- Tienda -->
			<a
				href="/Tienda"
				class="bg-gray-700 rounded-2xl p-8 hover:scale-105 transform transition block"
			>
				<h3 class="text-xl font-semibold mb-2">Tienda</h3>
				<p class="text-gray-300">
					Compra componentes y kits electrónicos.
				</p>
			</a>

			<!-- Diseño Web -->
			<a
				href="/diseño-web"
				class="bg-gray-700 rounded-2xl p-8 hover:scale-105 transform transition block"
			>
				<h3 class="text-xl font-semibold mb-2">Diseño Web</h3>
				<p class="text-gray-300">Creamos tu página profesional.</p>
			</a>

			<!-- Arduino & Electrónica -->
			<a
				href="/arduino"
				class="bg-gray-700 rounded-2xl p-8 hover:scale-105 transform transition block"
			>
				<h3 class="text-xl font-semibold mb-2">
					Arduino & Electrónica
				</h3>
				<p class="text-gray-300">
					Códigos, diagramas y asesoría técnica.
				</p>
			</a>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-20 px-6 max-w-4xl mx-auto text-center">
		<h2 class="text-3xl font-bold mb-4">
			¿Listo para impulsar tu proyecto?
		</h2>
		<p class="text-gray-300 mb-6">
			Contáctanos y llevemos tu idea a la realidad con soluciones
			digitales y electrónicas.
		</p>
		<button
			class="px-6 py-3 bg-green-500 hover:bg-green-600 rounded-full text-black font-semibold transition"
		>
			Contáctanos
		</button>
	</section>
	<Footer />
</Layout>
